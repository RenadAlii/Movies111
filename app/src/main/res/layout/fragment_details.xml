<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

<data>
    <variable
        name="viewModel"
        type="com.example.razmovies.model.MovieViewModel" />
    <variable
        name="detailsFragment"
        type="com.example.razmovies.DetailsFragment" />


</data>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
        <ImageView
            android:id="@+id/movie_image"
            imageUrl="@{detailsFragment.POSTEROFMOVIE}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:padding="22dp"
            tools:src="@tools:sample/backgrounds/scenic" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="30dp"
        tools:text="tttttttttttt"
        android:text="@{detailsFragment.TITLEOFMOVIE}"
        android:id="@+id/hello_movie"/>
</LinearLayout>
</layout>